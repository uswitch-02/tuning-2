<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model:@customer, local:true do |f| %>
      <%= render 'layouts/errors', obj: @customer %>
      <div class="form-group">
        <%= f.label :Username %>
        <%= f.text_field :pen_name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
    <h4>アカウント設定</h4>
      <div class="form-group">
        <%= f.label :is_published, "公開設定" %>
        <%= f.select :is_published, options_for_select([["公開",true],["非公開",false]]), {}, class: "form-control" %>
      </div>
    <div class="form-group">
      <%= f.submit "⇒", class: 'btn btn-secondary' %>
    <% end %>
    </div>
  </div>
</div>
