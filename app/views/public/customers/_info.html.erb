<table class='table'>
  <tr><%= image_tag customer.get_profile_image, size:'100x100' %></tr>

  <tr>
	  <th>name</th>
	  <th><%= customer.pen_name %></th>
  </tr>

  <tr>
	  <th>introduction</th>
	  <th><%= customer.introduction %></th>
  </tr>

  <tr>
    <th>follows</th>
    <th><%= link_to customer.followings.count, customer_followings_path(customer) %></th>
  </tr>

  <tr>
    <th>followers</th>
    <th><%= link_to customer.followers.count, customer_followers_path(customer) %></th>
  </tr>

  <tr>
    <th><%= link_to "お気に入り記事", favorites_customer_path(customer) %></th>
  </tr>

</table>

<div class='row'>
    <% if current_customer != customer && customer.pen_name != "guestuser"%>
        <td><%= render "public/relationships/btn", customer: customer %></td>
    <% else %>
        <%= link_to edit_customer_path(customer), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
    <% end %>
</div>