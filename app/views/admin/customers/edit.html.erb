<div class="container-md">
    <h2><%= @customer.full_name %>さんの会員情報編集</h2>
  <%= form_with model: @customer, url: admin_customer_path, metod: :patch, local: true do |f| %>
  <table class="mt-5 mb-5">
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td>
        <div class="field">
            <% f.label :last_name %>
            <%= f.text_field :last_name, placeholder: @customer.last_name %>
        </div>
      </td>
      <td>
        <div class="field">
            <% f.label :first_name %>
            <%= f.text_field :first_name, placeholder: @customer.first_name %>
        </div>
      </td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td>
        <div class="field">
            <% f.label :last_name_kana %>
            <%= f.text_field :last_name_kana, placeholder: @customer.last_name_kana %>
        </div>
      </td>
      <td>
        <div class="field">
            <% f.label :first_name_kana %>
            <%= f.text_field :first_name_kana, placeholder: @customer.first_name_kana %>
        </div>
      </td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td>
        <div class="field">
          <% f.label :email %>
          <%= f.email_field :email, placeholder: @customer.email %>
        </div>
      </td>
    </tr>
    <tr>
      <div class="form-group">
      <td>会員ステータス</td>
      <!--会員の退会、有効を選択するラジオボタン-->
      <td>
      　<%= f.radio_button :is_deleted, Customer.is_deleteds.key(false) %>
        <%= f.label :is_deleted_exist, Customer.is_deleteds_i18n[:exist] %>
        <%= f.radio_button :is_deleted, Customer.is_deleteds.key(true) %>
        <%= f.label :is_deleted_withdraw, Customer.is_deleteds_i18n[:withdraw] %>
      </td>
      </div>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit '変更を保存', class: "btn btn-sm btn-success" %></td>
    </tr>
    </table>
  <% end %>
</div>