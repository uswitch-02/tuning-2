<div class="col-md-6">
  <thead>
    <table class="table mt-5 mb-5">
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
  </thead>
  <tbody>
    <% diarys.each do |diary| %>
      <tr>
        <td><%= link_to(diary.customer) do %>
            <%= image_tag diary.customer.get_profile_image, size:'50x50' %>
            <% end %>
        </td>
        <td><%= link_to diary.title, diary,  class: "diary_#{diary.id}" %></td>
        <td><%= diary.body %></td>
        <td>
          <% if admin_signed_in? %> <!-- 管理者がサインインしている場合のみ表示 -->
            <%= link_to '削除', admin_customer_path(diary), method: :delete, data: { confirm: '本当に削除しますか？' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>