<table class = "table">
    <thead>
        <tr>
          <th></th>
          <th scope="col">Title</th>
          <th scope="col">Opinion</th>
        </tr>
    </thead>


    <tbody>
      <% diarys.each do |diary| %>
        <tr>
          <td scope="row"><%= link_to(diary.customer) do %>
              <%= image_tag diary.customer.get_profile_image, size:'50x50' %>
              <% end %>
          </td>
          <td><%= diary.title %></td>
          <td><%= diary.body %></td>
          <td>
            <% if admin_signed_in? %> <!-- 管理者がサインインしている場合のみ表示 -->
              <%= link_to '削除', admin_customer_path(diary), method: :delete, data: { confirm: '本当に削除しますか？' } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>