<header>
  <nav class="navbar navbar-expand-lg", style="background-color: #bc8f8f;">
    <div class="container">
      <div class="row w-100">
          <div class="col-3">
            <!--ここにロゴが入ります-->
            <%= link_to 'ROOT', root_path %>
          </div>
          <div class="col-9">
          <div class="row w-100 justify-content-end">
            <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                <% if customer_signed_in? %>
                  <!--Customer ログイン後header-->
                  <span class="navbar-text text-right mr-3">ようこそ、<%= current_customer.full_name %>さん</span>
                  <li><%= link_to "マイページ", customer_path(current_customer),data: {"turbolinks": false}, class: 'nav-link text-right' %></li>
                  <li><%= link_to "Diarys",     diarys_path,                        class: 'nav-link text-right' %></li>
                   <li><%= link_to "users",     customers_path,                        class: 'nav-link text-right' %></li>
                  <li><%= button_to "ログアウト", destroy_customer_session_path,     class: 'nav-link text-right', method: :delete %></li>
                <% elsif admin_signed_in? %>
                  <!--Admin ログイン後header-->
                  <li><%= link_to "会員一覧",     admin_path,             class: 'nav-link text-right' %></li>
                  <li><%= link_to "ログアウト",   destroy_admin_session_path,      class: ' nav-link text-right', method: :delete %></li>
                <% else %>
                  <!--共通ログイン前 header-->
                  <li><%= link_to "About",    about_path,                      class: 'nav-link text-right' %></li>
                  <li><%= link_to "投稿一覧", diarys_path,                      class: 'nav-link text-right' %></li>
                  <li><%= link_to "新規登録", new_customer_registration_path,  class: 'nav-link text-right' %></li>
                  <li><%= link_to "ログイン", new_customer_session_path,       class: 'nav-link text-right' %></li>
                  <li><%= link_to 'ゲストログイン（閲覧用）', public_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %></li>
                <% end %>
                <div class="search_form serch_inner">
                  <%= render 'public/searchs/form' %>
                </div>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>